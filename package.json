{
  "name": "flyffmobtracker",
  "version": "1.1.0",
  "description": "Flyff Mob Tracker â€” an XP and mob counter for Flyff Universe.",
  "main": "main.js",
  "author": "Syjster",
  "license": "MIT",
  "homepage": "https://github.com/Syjster/flyffmobtracker",
  "repository": {
    "type": "git",
    "url": "https://github.com/Syjster/flyffmobtracker.git"
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder -w nsis portable --x64 --publish never"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "openai": "^5.10.0"
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.syjster.flyffmobtracker",
    "productName": "Flyff Mob Tracker",
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "package.json"
    ],
    "asar": true,
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        "portable"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "Flyff Mob Tracker Setup ${version}.exe"
    },
    "portable": {
      "artifactName": "Flyff Mob Tracker Portable ${version}.exe"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities",
      "hardenedRuntime": true
    },
    "dmg": {
      "artifactName": "Flyff Mob Tracker-${version}.dmg"
    }
  }
}
