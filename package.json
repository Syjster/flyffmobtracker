{
  "name": "flyff-session-launcher",
  "version": "2.1.0",
  "description": "Flyff Session Launcher - Multi-client manager with keyboard focus redirect and XP tracking",
  "main": "main.js",
  "author": "Syjster",
  "license": "MIT",
  "homepage": "https://github.com/Syjster/flyffmobtracker",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "sharp": "^0.33.0",
    "tesseract.js": "^5.1.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.syjster.flyff-launcher",
    "productName": "Flyff Session Launcher",
    "files": [
      "main.js",
      "preload.js",
      "launcher-preload.js",
      "cooldown-preload.js",
      "keyforward-preload.js",
      "index.html",
      "renderer.js",
      "styles.css",
      "launcher.html",
      "launcher.css",
      "launcher-renderer.js",
      "cooldown.html",
      "cooldown.css",
      "cooldown-renderer.js",
      "keyforward.html",
      "keyforward.css",
      "keyforward-renderer.js",
      "package.json"
    ],
    "asar": true,
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "icon": "build/icon-sword-v2.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        "portable"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "Flyff Session Launcher Setup ${version}.exe"
    },
    "portable": {
      "artifactName": "Flyff Session Launcher Portable ${version}.exe"
    }
  }
}